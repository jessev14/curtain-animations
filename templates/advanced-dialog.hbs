<form class="flexcol">

    <label>Text</label>
    <input type="text" name="text" value="{{text}}" />

    <div class="form-group">
        <label>Image</label>
        <div class="form-fields">
            {{filePicker type="imagevideo" target="img.src"}}
            <input class="image" type="text" name="img.src" data-type="imagevideo" value="{{img}}" />
        </div>
    </div>

    <div class="form-group">
            <label>New Scene Darkness Level (Current: {{darkness}})</label>
            <div class="form-fields">
                <input type="range" name="darkness" value="{{darkness}}" min="0" max="1" step="0.05">
                <span class="range-value">0.2</span>
            </div>
        </div>

</form>